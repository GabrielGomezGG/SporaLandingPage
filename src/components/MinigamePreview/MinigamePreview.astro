---
import { Image } from 'astro:assets';
import MinigameDevice  from '../../assets/images/minigame_device.png'
import BackgroundImage from "../../assets/images/background_bosque.png"
import PreviewText from './PreviewText.astro';

const { title, text} = Astro.props;

---
<div class="section_two" id="section_two">
	<Image src={BackgroundImage} alt="Background Image" class='minigame_background'/>
	<Image src={MinigameDevice} alt="Preview Image" class='minigame_preview_img'/>
	<PreviewText
		title = {title},
		text = {text}
	/>
</div>

<style>
	.section_two {
		height: 100vh;
		display: grid;
		grid-template-columns: 1fr 2fr;
		align-items: center;
		padding: 0px 120px;
	}
	
	.minigame_preview_img{
		position: relative;
		width: auto;
		height: 70vh;
		left: -2vw;
	}

	.minigame_background{
		position: absolute;
		width: auto;
		height: 95vh;
		left: -12vw;
	}

	@media screen and (max-width: 636px) {
		.section_two{
			display: flex;;
			flex-direction: column-reverse;
		}

	}

