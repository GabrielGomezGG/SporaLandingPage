---
import { Image } from 'astro:assets';
import MinigameDevice  from '../../assets/images/minigame_device.png'
import BackgroundImage from "../../assets/images/background_bosque.png"
import PreviewText from './PreviewText.astro';

const { title, text} = Astro.props;

---
<div class="section_two">
    
	<!-- <div class="images_section_two"> -->
		<Image src={MinigameDevice} alt="Preview Image" class='minigame_preview_img'/>
		<!-- <Image src={BackgroundImage} alt="Background Image" class='background_img'/> -->
	<!-- </div> -->

    <PreviewText
		title = {title},
		text = {text}
	/>
    
</div>

<style>
	.section_two {
		height: 100vh;
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		padding: 0px 80px;
	}
	
	.minigame_preview_img{
		width: 300px;
		height: 600px;
	}

