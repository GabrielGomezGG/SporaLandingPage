---
import SocialLogos from './SocialLogos.astro';

const { title, text, textButton } = Astro.props;
const primaryColor = "#F58C0A"
const primary30 = "#995900"
const primary20 = "#663B00"
const primary10 = "#442801"
const secondary30 = "#2F6A33"
const secondary20 = "#1A4A1F"
const secondary10 = "#538C21"
---
<div class="homeText">
    <h1>{title}</h1>
    <p>{text}</p>
    <button type="button">{textButton}</button>
    <h2>Seguinos en</h2>
    <div class="icons">
        <SocialLogos>
    </div>
</div>
<style define:vars={{primaryColor, primary30, primary20, primary10, secondary30, secondary20, secondary10}}>

    .homeText {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        /* height: 100vh; */
        /* padding-left: 80px;
        padding-right: 80px; */

        h1 {
            font-size: 60px;
            /* margin-bottom: 1rem; */
            color: var(--primary10);
            text-align: center;
            -webkit-text-stroke: 2px white;
        }

        /* h2 {
            font-size: 2rem;
            margin-top: 5rem;
            color: var(--primary10);
            text-align: center;
        } */

        p {
            font-size: 1rem;
            margin-bottom: 1rem;
            color: var(--primary10);
            text-align: center;
        }

        button {
            /* margin-top: 4rem; */
            padding: 1rem 1rem;
            font-size: 2rem;
            background-color: var(--secondary10);
            color: white;
            border: none;
            border-radius: 1rem;
            cursor: pointer;
        }

        button:hover {
            background-color: var(--secondary30);
        }

        button:active {
            background-color: var(--secondary30);
        }
        
    }
</style>
