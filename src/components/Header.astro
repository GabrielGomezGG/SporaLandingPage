---
import Navigation from "./Navigation.astro";
import SporaLogo from "./SporaLogo.astro";
---

<header class="topbar">
  <SporaLogo />
  <Navigation />
</header>

<style>
    .topbar {
        height: 60px; /* Adjust to the actual height of your top bar */
        background-color: #333;
        color: white;
        display: flex;
        justify-content: space-between; /* Logo on the left, navigation on the right */
        align-items: center; /* Center vertically */
        padding: 0 20px;
        position: fixed;
        width: 100%; /* Make it span the full width of the page */
        z-index: 1000;
    }
</style>
